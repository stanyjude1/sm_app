<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        style="@style/CardPaddingStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/detilLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/iconLayout"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_width="0dp"
                                    android:layout_weight=".70"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:layout_alignParentLeft="true"
                                    android:text="Name"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/btnDelete"
                                    android:layout_width="0dp"
                                    android:layout_weight=".30"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/round_corner_red"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="Delete"
                                    android:textColor="@color/White"
                                    android:textSize="12sp" />
                            </LinearLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider_color" />

                            <TextView
                                android:id="@+id/tv_about"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lines="2"
                                android:maxLines="2"
                                android:padding="5dp"
                                android:text="27 Year,5'6'' Height,Gujarati-Hindu" />

                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Interest Received"
                                android:textColor="@color/red"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/detilLayout"
                            android:layout_alignTop="@+id/detilLayout"
                            android:layout_toLeftOf="@+id/iconLayout"
                            android:background="@color/divider_color" />

                        <LinearLayout
                            android:id="@+id/iconLayout"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/detilLayout"
                            android:gravity="center_vertical|center"
                            android:layout_alignBottom="@+id/detilLayout"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/btnInterest"
                                android:layout_width="35dp"
                                android:layout_height="0dp"
                                android:layout_weight=".50"
                                android:padding="5dp"
                                android:src="@drawable/check_gray_fill"/>

                            <ImageView
                                android:id="@+id/btnReject"
                                android:layout_width="35dp"
                                android:layout_height="0dp"
                                android:layout_weight=".50"
                                android:padding="5dp"
                                android:src="@drawable/cancel_fill_gray"/>

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

